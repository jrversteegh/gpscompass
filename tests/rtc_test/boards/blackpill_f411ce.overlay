&i2c1 {
    clock-frequency = <I2C_BITRATE_FAST>;

    ds3231: ds3231@68 {
        compatible = "maxim,ds3231";
        reg = <0x68>;
        isw-gpios = <&gpioe 26 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
    };
};

&i2c2 {
    pinctrl-0 = <&i2c2_scl_pb10 &i2c2_sda_pb3>;
    pinctrl-names = "default";
    status = "okay";
    clock-frequency = <I2C_BITRATE_FAST>;
};
